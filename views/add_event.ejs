<!DOCTYPE html>
<head>
	<title>Display Bord Form</title>
	<% include partials/dependencies %>
	<link rel="stylesheet" href="css/single_page.css" type='text/css'>
</head>
<body>
	<% include partials/header %>
	<main>
		<center><h4>Add your event to the Engineering Display board!</h4></center>
		<div class="row">
			<form class="col l8 s12" action="/upload_event" enctype="multipart/form-data" method="post">
				<div class="row">
					<div class="input-field col s6">
						<input placeholder="General Meeting" id="event_name" name="event_name" type="text" class="validate">
						<label for="event_name">Event Name</label>
					</div>
					<div class="input-field col s6">
						<input placeholder="Boelter 5800" id="location" name="location"type="text" class="validate">
						<label for="location">Location</label>
					</div>
				</div>
				<div class="row">
					<div class="col s6">
						<label for="data">Date</label>
						<input type="date" id="date" name="date" class="datepicker" class="validate">
					</div>
					<div class="row">
						<div class="col s6">
							<label for="time">Time</label>
							<input type="time" id="time" name="time" class="timepicker" class="validate">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s6">
						<input placeholder="ESUC" id="org" name="org" type="text" class="validate" >
						<label for="org">Organization Name</label>
					</div>
					<div class="input-field col s6">
						<input placeholder="esuc.ucla.webmaster@gmail.com" id="email" name="email" type="email" class="validate">
						<label for="email">Contact Email</label>
					</div>
				</div>	
				<div class="file-field input-field">
				<div class="btn">
						<span>Add Flier (optional)</span>
						<input type="file" id="flier" name="flier">
					</div>
					<div class="file-path-wrapper">
						<input class="file-path validate" type="text">
					</div>
				</div>
				<center><input class='btn' type="submit" value="Submit"/></center>
			</form>
		</div>
	</main>
	<% include partials/footer %>

</body>
